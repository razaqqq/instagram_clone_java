<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="55dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/instagram_2"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="25dp"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:id="@+id/activity_sign_in_email"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:inputType="textEmailAddress"
            android:hint="Username"
            android:id="@+id/activity_sign_in_username"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:inputType="text"
            android:hint="Full Name"
            android:id="@+id/activity_sign_in_full_name"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:id="@+id/activity_sign_in_password"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="REGISTER"
            android:layout_marginTop="30dp"
            android:id="@+id/activity_sign_in_register"
            android:background="@drawable/white_rounder_button_not_pressed"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="Login"
            android:gravity="center"
            android:textSize="20dp"
            android:id="@+id/activity_sign_in_login"
            android:textColor="@color/blue"
            />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/activity_sign_in_progess_bar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/activity_sign_in_progess_bar"
        android:layout_centerHorizontal="true"
        android:text="Register Request Loading Data ..."
        android:textColor="@color/black"
        android:visibility="gone"
        android:id="@+id/activity_sign_in_loading_data"
        android:textSize="20sp" />


    
</RelativeLayout>