<merge xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/white_gray_border_top"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/snippet_fragment_chat_page_toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/snippet_fragment_chat_page_toolbar_back_arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_backarrow" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/snippet_fragment_chat_page_toolbar_profile_pic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/snippet_fragment_chat_page_toolbar_back_arrow"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/snippet_fragment_chat_page_tollbar_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/snippet_fragment_chat_page_toolbar_profile_pic"
                    android:text="username"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />






            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
</merge>