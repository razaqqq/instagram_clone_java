<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fragment_profile_rel_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/snippet_top_profile_bar" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_profile_rel_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_profile_rel_layout_1">

        <include layout="@layout/layout_center_view_profile" />
    </RelativeLayout>
    <ProgressBar
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/profileProgessbar"
        android:layout_centerInParent="true"
        android:visibility="visible"/>
    <include layout="@layout/layout_bottom_navigation_view"/>
</RelativeLayout>