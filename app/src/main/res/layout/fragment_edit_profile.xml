<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <RelativeLayout
           android:id="@+id/fragment_edit_profile_rel1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <include layout="@layout/snippet_top_edit_profile_toolbar" />
       </RelativeLayout>

       <RelativeLayout
           android:id="@+id/fragment_edit_profile_rel2"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_below="@id/fragment_edit_profile_rel1">

           <include layout="@layout/snippet_center_edit_profile" />
       </RelativeLayout>
       <ProgressBar
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:id="@+id/fragment_edit_profile_progress_bar"
           android:layout_centerInParent="true"
           android:visibility="visible"/>
   </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>