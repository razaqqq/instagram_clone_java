<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/activity_next_rel_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- ToolBar -->
                <include layout="@layout/snippet_top_next_toolbar" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_next_rel_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_next_rel_1"
                android:background="@drawable/grey_border_bottom"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/activity_next_image_share"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:scaleType="centerCrop" />

                <EditText
                    android:id="@+id/activity_next_caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/activity_next_image_share"
                    android:hint="Write a Descriptions" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>